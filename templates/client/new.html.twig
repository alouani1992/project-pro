{% extends 'layouts/base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {{ form_start(form) }}
<div class="row">
    <div class="col-2"></div>
    <div class="col-6">
    {{ form_row(form.designation) }}
    </div>
</div>
    {{ form_row(form.date_creation) }}
    {{ form_row(form.label) }}
    {{ form_row(form.description) }}
    {{ form_row(form.image_of_product) }}
    <div class="row">
    <div class="col-2"></div>
    <input type="submit" value="Save" class="btn btn-primary col-3 row-2">
    </div>
    {{ form_end(form) }}
{% endblock %}
